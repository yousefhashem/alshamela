<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".BookDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/book_bg"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/book_name_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/changa"
            android:maxLines="2"
            android:paddingEnd="16dp"
            android:textColor="#fff"
            android:textDirection="rtl"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/book_des_short_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/changa"
            android:maxLines="2"
            android:paddingEnd="16dp"
            android:textColor="#E6E6E6"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_name_de"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/book_auth_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/changa"
            android:maxLines="2"
            android:paddingEnd="16dp"
            android:textColor="#E6E6E6"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_des_short_de"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/book_pub_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/changa"
            android:maxLines="2"
            android:paddingEnd="16dp"
            android:textColor="#E6E6E6"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_auth_de"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/book_first_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/changa"
            android:maxLines="2"
            android:paddingEnd="16dp"
            android:textColor="#E6E6E6"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_pub_de"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/book_pages_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/changa"
            android:maxLines="1"
            android:paddingEnd="16dp"
            android:textColor="#E6E6E6"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_first_de"
            tools:ignore="RtlSymmetry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/download_de"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="-20dp"
        android:text="@string/down"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/changa"
        android:paddingEnd="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/download_btn"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/download_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:translationZ="100dp"
        android:src="@drawable/down_ic"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/download_de"
        app:layout_constraintEnd_toEndOf="@+id/download_de"
        app:layout_constraintTop_toTopOf="@+id/download_de" />

    <TextView
        android:id="@+id/book_des_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/changa"
        android:paddingEnd="16dp"
        android:textColor="#343434"
        android:textDirection="rtl"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>